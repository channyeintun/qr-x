{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "cache": false,
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".svelte-kit/**"],
      "dependsOn": ["^build"]
    },
    "watch:core": {
      "cache": false,
      "persistent": true
    }
  }
}
